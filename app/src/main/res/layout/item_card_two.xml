<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_height="@dimen/card_two_height"
    android:orientation="horizontal"
    android:weightSum="2">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewLeft"
        android:layout_width="2dp"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/black">

        <RelativeLayout
            android:background="@drawable/cardborder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/card_title_backround_left"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#e2b75b"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_title_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/gh_name_left"
                android:layout_width="349dp"
                android:layout_height="37dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="bottom"
                android:text="h|s"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewRight"
        android:layout_width="2dp"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/card_title_backround_right"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#E2b75b"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_title_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/gh_name_right"
                android:layout_width="349dp"
                android:layout_height="37dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="bottom"
                android:text="h|s"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>