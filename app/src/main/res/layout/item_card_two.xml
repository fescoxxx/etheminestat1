<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_two_height"
    android:orientation="horizontal"
    android:weightSum="2" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewLeft"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"

        android:layout_marginBottom="@dimen/tile_padding"
        android:layout_marginTop="@dimen/tile_padding"
        android:layout_marginLeft="@dimen/tile_padding"
        android:layout_marginRight="@dimen/tile_padding"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/card_title_backround"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/reported_green"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                />


            <TextView
                android:id="@+id/procent"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_title_backround"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading"
                 />

            <TextView
                android:id="@+id/gh_name"
                android:layout_width="349dp"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/roboto_medium"
                android:text="h|s"
                android:textAlignment="center"
                android:textSize="24sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/tile_padding"
        android:layout_marginTop="@dimen/tile_padding"
        android:layout_marginLeft="@dimen/null_dp"
        android:layout_marginRight="@dimen/null_dp"
        android:layout_weight="1" />

</LinearLayout>