<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eth_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/eth_settings"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#EBCD99"
                        tools:text="@string/eth_settings" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/cardbackground" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="84dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/wallet_adr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="22dp"

                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/wallet_address_eth"
                        android:inputType="textPersonName"
                        android:singleLine="false"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonOk"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="4dp"

                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/buton_edit"
                        android:text="@string/ok"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout2"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cardbackground" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout3_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/miner_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/miner_settings"
                        android:textColor="#ebcd99"
                        android:textSize="14sp"
                        tools:text="@string/miner_settings" />

                    <TextView
                        android:id="@+id/link_edit_site"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:text="@string/edit_on_ethermine_org"
                        android:textColor="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:textSize="16sp"
                        tools:text="@string/edit_on_ethermine_org" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout22222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout3"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cardbackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout22222"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/line_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/send_a_mail_if_one_of_my_workers_goes_offline"

                        android:textColor="#ebcd99"
                        android:textSize="14sp"
                        tools:text="@string/send_a_mail_if_one_of_my_workers_goes_offline" />

                    <ImageView
                        android:id="@+id/iv_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_check_box_no" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout1231123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout6"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cardbackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout12312"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LinearLayout1231123"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/line_tree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/email_address"
                        android:textAlignment="viewStart"
                        android:textColor="#ebcd99"
                        android:textSize="14sp"
                        tools:text="@string/email_address" />

                    <TextView
                        android:id="@+id/line_tree_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="77dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/tire"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/article_subheading"
                        tools:text="@string/tire" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayout12313224"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout12312"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider52"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cardbackground" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayout123134"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout12313224"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/line_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/payment_threshold"
                        android:textColor="#EBCD99"
                        android:textSize="14sp"
                        tools:text="@string/payment_threshold" />

                    <TextView
                        android:id="@+id/line_payment_eth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/tire"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/article_subheading"
                        tools:text="@string/tire" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout1231231254"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout123134"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider522"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cardbackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout3333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinearLayout1231231254"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/line_public_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/public_ip_address"
                        android:textColor="#ebcd99"
                        android:textSize="14sp"
                        tools:text="@string/public_ip_address" />

                    <TextView
                        android:id="@+id/line_public_ip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:singleLine="true"
                        android:text="@string/tire"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/article_subheading"
                        tools:text="@string/tire" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>