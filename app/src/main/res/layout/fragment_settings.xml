<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_view1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/tile_padding"
    android:layout_marginTop="@dimen/tile_padding"
    android:layout_marginLeft="@dimen/null_dp"
    android:layout_marginRight="@dimen/null_dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/card_title_backround"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/reported_green"
            android:scaleType="centerCrop">

        </RelativeLayout>

        <TextView
            android:id="@+id/link"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            tools:text="@string/item_title" />

        <TextView
            android:id="@+id/miner_settings"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/link"
            android:layout_alignTop="@+id/link_edit_site"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:text="Miner Settings:"
            tools:text="Miner Settings:" />

        <TextView
            android:id="@+id/line_two"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/link"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="Send if mals of end"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />


        <Button
            android:id="@+id/buttonOk"
            android:layout_width="51dp"
            android:layout_height="38dp"
            android:layout_alignEnd="@+id/link_edit_site"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="OK" />

        <TextView
            android:id="@+id/link_edit_site"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="99dp"
            android:fontFamily="@font/roboto"
            android:gravity="right"
            android:text="Edit on ethermine.org"
            android:textSize="16sp"
            tools:text="Edit on ethermine.org" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/link_edit_site"
            android:layout_alignTop="@+id/line_two"
            android:text="CheckBox" />

        <TextView
            android:id="@+id/line_tree"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/link"
            android:layout_marginBottom="100dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/line_tree_email"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/link_edit_site"
            android:layout_alignTop="@+id/line_tree"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />


        <TextView
            android:id="@+id/line_payment"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/link"
            android:layout_marginBottom="60dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />


        <TextView
            android:id="@+id/line_payment_eth"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/link_edit_site"
            android:layout_alignTop="@+id/line_payment"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />


        <TextView
            android:id="@+id/line_public_ip"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/link"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/line_public_ip2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/link_edit_site"
            android:layout_alignTop="@+id/line_public_ip"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:text="@string/item_desc" />

        <EditText
            android:id="@+id/wallet_adr"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/link"
            android:layout_alignTop="@+id/buttonOk"
            android:ems="10"
            android:hint="Wallet address ETH"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>