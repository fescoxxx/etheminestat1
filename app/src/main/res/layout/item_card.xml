<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/tile_padding"
    android:layout_marginTop="@dimen/tile_padding"
    android:layout_marginLeft="@dimen/null_dp"
    android:layout_marginRight="@dimen/null_dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/card_title_backround"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/reported_green"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            tools:text="@string/item_title" />


        <TextView
            android:id="@+id/reported"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/card_title"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_medium"
            android:text="h|s"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/current"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title_backround"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:text="h|s"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/average"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/card_title"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_medium"
            android:text="h|s"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/last_seen"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/card_title"
            android:layout_alignEnd="@+id/card_title"
            android:gravity="center"
            android:text="Last Seen: 5 m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5BC0DE"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/stale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#DF691A"
                android:text="TextView" />

            <TextView
                android:id="@+id/invalid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D9534F"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>


    </RelativeLayout>
 </android.support.v7.widget.CardView>
