<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/tile_padding"
    android:layout_marginLeft="@dimen/null_dp"
    android:layout_marginRight="@dimen/null_dp"
    android:layout_marginTop="@dimen/tile_padding"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/card_title_backround"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#353535"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Workers"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#E9CC98"
            tools:text="Workers" />


        <TextView
            android:id="@+id/Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Total"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:text="Total" />


        <TextView
            android:id="@+id/average_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/average_"
            android:fontFamily="@font/roboto_medium"
            android:text="average"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/current_2"
            android:fontFamily="@font/roboto_medium"
            android:text="current"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reported_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/reported_"
            android:fontFamily="@font/roboto_medium"
            android:text="reported"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/workers_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Total"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/roboto_medium"
            android:text="workers"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/average_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Total"
            android:layout_alignTop="@+id/current_2"
            android:fontFamily="@font/roboto_medium"
            android:text="Average:"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/current_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/reported_"
            android:layout_marginEnd="124dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Current:"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reported_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/workers3"
            android:layout_marginStart="113dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Reported:"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/workers3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Total"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Workers:"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
