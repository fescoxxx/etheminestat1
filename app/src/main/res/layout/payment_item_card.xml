<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/tile_padding"
    android:layout_marginLeft="@dimen/null_dp"
    android:layout_marginRight="@dimen/null_dp"
    android:layout_marginTop="@dimen/tile_padding"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp">


        <TextView
            android:id="@+id/durationPay"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_below="@+id/card_title_backround"
            android:layout_toEndOf="@+id/timePay"
            android:background="#1f1b20"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="durationPay"
            android:textAlignment="center"
            android:textColor="#ebcd99"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/timePay"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_below="@+id/card_title_backround"
            android:layout_toEndOf="@+id/datePay"
            android:background="#1f1b20"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="timePay"
            android:textAlignment="center"
            android:textColor="#ebcd99"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/datePay"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_title_backround"
            android:background="#1f1b20"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="datePay"
            android:textAlignment="center"
            android:textColor="#ebcd99"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ethPay"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#1f1b20"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="ethPay"
            android:textAlignment="center"
            android:textColor="#ebcd99"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txHash"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/durationPay"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="14dp"
            android:paddingLeft="14dp"
            android:text="txHash"
            android:textColorLink="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
